<h1>
    Codeial / <%= title %>
</h1>

 <!-- Creating post for user -->
<section id="feed-posts">
    <h1>Posts</h1>
    < % if(locals.user) {%>
    <form action= "/posts/create" id="new-post-form" method="POST">
        <textarea name="content" cols="10" rows="3" placeholder="Type Here....."></textarea>
        <input type="submit" value="Post">
    </form>
    <% } %>
    <div id="post-list-container">
        <ul>
            <% for( post of posts) { %>
                <li>
                    <%= post.content %>
                    <br>
                    <small>
                        <%= post.user %>
                    </small>    
                </li>
            
            <% } %>
        </ul>

    </div>
</section>